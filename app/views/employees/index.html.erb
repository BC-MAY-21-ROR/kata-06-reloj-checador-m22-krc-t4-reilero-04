<div class="gray-panel">
  <hr>
  <h1>EMPLOYEES</h1>
  <%= form_with url: employees_path, method: :get do |form| %>
    <!--<%= form.label :date %>-->
    <%= form.text_field :query_text, placeholder: 'nombre empleado', onChange: 'this.form.requestSubmit()', value: params[:query_text] %>
  <% end %>
  <div>
    <% @employees.each do |employee| %>
      <div>
        <%= employee.name %>
      </div>
      <div>
        <%= button_to  "Detail", employee, method: :get %>
      </div>
    <% end %>
  </div>
  <div>
    <%= button_to 'Create New Employee', new_employee_registration_path, method: :get %>
  </div>
  <%= render 'shared/back_to_admin' %>
</div>
